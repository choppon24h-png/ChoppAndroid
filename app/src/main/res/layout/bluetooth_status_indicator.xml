<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="#F5F5F5"
    android:id="@+id/bluetooth_status_root">

    <!-- Indicador Visual (Círculo com Cor) -->
    <View
        android:id="@+id/bluetooth_status_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bluetooth_status_circle"
        android:contentDescription="Indicador de Status Bluetooth" />

    <!-- Texto de Status -->
    <TextView
        android:id="@+id/bluetooth_status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Conectando..."
        android:textSize="14sp"
        android:textColor="#333333"
        android:textStyle="bold" />

    <!-- Ícone de Bluetooth (Customizado) -->
    <ImageView
        android:id="@+id/bluetooth_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_bluetooth_custom"
        android:contentDescription="Ícone Bluetooth"
        android:tint="#0066CC" />

</LinearLayout>
